<!-- res/layout/fragment_explore.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- 언어 필터 버튼 -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_lang_python"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Python"
                android:textStyle="normal"
                style="@style/RoundedButtonStyle"/>
            <Button
                android:id="@+id/button_lang_java"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Java"
                android:textStyle="normal"
                style="@style/RoundedButtonStyle"/>
            <Button
                android:id="@+id/button_lang_kotlin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kotlin"
                android:textStyle="normal"
                style="@style/RoundedButtonStyle"/>
            <Button
                android:id="@+id/button_lang_cpp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C++"
                android:textStyle="normal"
                style="@style/RoundedButtonStyle"/>
            <Button
                android:id="@+id/button_lang_js"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="JavaScript"
                android:textStyle="normal"
                style="@style/RoundedButtonStyle"/>
        </LinearLayout>
    </HorizontalScrollView>

    <!-- 타입 필터 버튼 -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_type_ml"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Machine Learning"
                android:textStyle="normal"
                style="@style/RoundedButtonStyle"/>
            <Button
                android:id="@+id/button_type_web"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Web Development"
                android:textStyle="normal"
                style="@style/RoundedButtonStyle"/>
            <Button
                android:id="@+id/button_type_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile Development"
                android:textStyle="normal"
                style="@style/RoundedButtonStyle"/>
            <Button
                android:id="@+id/button_type_blockchain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blockchain"
                android:textStyle="normal"
                style="@style/RoundedButtonStyle"/>
            <Button
                android:id="@+id/button_type_game"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Game Development"
                android:textStyle="normal"
                style="@style/RoundedButtonStyle"/>
        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/text_projects_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="프로젝트 둘러보기"
            android:textSize="24sp" />
    </LinearLayout>

    <!-- 프로젝트 리스트 -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        android:background="@drawable/block_background"
        android:padding="16dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_projects"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"/>
    </androidx.cardview.widget.CardView>

</LinearLayout>
