<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:orientation="horizontal">

    <!-- 폴더 아이콘 -->
    <ImageView
        android:id="@+id/icon_folder"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_folder"
        android:layout_gravity="center_vertical"
        android:contentDescription="@string/folder_icon" />

    <!-- 프로젝트 제목 및 날짜 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="8dp"
        android:layout_weight="1"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/project_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Project Title"
            android:textSize="18sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/project_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Date ~ End Date"
            android:textSize="14sp"
            android:textColor="#808080"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- 언어 및 개발 타입 섹션 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="end|center_vertical"
        android:layout_marginStart="8dp">

        <!-- 언어 -->
        <TextView
            android:id="@+id/project_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Language"
            android:textSize="14sp" />

        <!-- 개발 타입 -->
        <TextView
            android:id="@+id/project_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DevType"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />
    </LinearLayout>
</LinearLayout>
